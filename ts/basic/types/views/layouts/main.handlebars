<body>
  <header>
    <img src='/img/hotel.jpg' alt='Hote Logo' />
  </header>
  {{#if flash}}
    <div class='alert alert-dismissible art-{{flash.type}}'>
      <button
        type='button'
        class='close'
        data-dismiss='alert'
        aria-hidden='true'
      >&times;</button>
      <strong>{{flash.intro}}</strong>
      {{{flash.message}}}
    </div>
  {{/if}}
  {{{body}}}
</body>